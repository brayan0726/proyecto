#:import hex kivy.utils.get_color_from_hex

<SigninWindow>:
	orientation: 'vertical'
	canvas.before:
		Color:
			rgba: hex('#24B0AE')
		Rectangle:
			size: self.size
			pos: self.pos
	BoxLayout:
		size_hint_y: .05
	BoxLayout:
		canvas.before:
			Color:
				rgba: hex('#F2F2F2')
			Rectangle:
				size: self.size
				pos: self.pos
		size_hint_y: .9
		Label:
			size_hint_x: .3
		BoxLayout:
			size_hint_x: .4
			orientation: 'vertical'
			Label: 
				size_hint_y: .50
				text: 'MINI SUPER ¨EL AHORO¨'
				color: (0,0.45,1,3)
				bold: True
				font_size: 30
			Label:
				id: signin_notificacion
				size_hint_y: .15
				color: (1, .2, .2, 1)
			TextInput:
				id: username
				size_hint_y: .1
				hint_text: 'Nombre de Usuario'
				multiline: False
				write_tab: False
				on_text_validate: root.verificar_usuario(self.text, password.text)
			TextInput:
				id: password
				size_hint_y: .1
				hint_text: 'Contraseña'
				multiline: False
				write_tab: False
				password: True
				on_text_validate: root.verificar_usuario(username.text, self.text)
			Button:
				size_hint_y: .1
				background_normal: ''
				text: 'Ingresar'
				on_release: root.verificar_usuario(username.text, password.text)
				background_color: hex('#45818e')
				bold: True
			Label:
				size_hint_y: .4
		Label:
			size_hint_x: .3
	BoxLayout:
		size_hint_y: .05